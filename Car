package garagefurther;

	// Car should inherit the variables from Vehicle class 
	// Utilise 'extends' method 

public class Car extends Vehicle{
	
	// Create distinct variable for the car class
	
	public int reg;
	
	// Create getters and setters
	// Create constructors
	
	public Car(String cartype, int numberOfWheels, String operational, int ID, int reg) {
		super(cartype, numberOfWheels, operational, ID);
		this.reg = reg;
	
	}
	
	public Car(String cartype, int numberOfWheels, String operational, int reg) {
		super(cartype, numberOfWheels, operational);
		this.reg = reg;
	
	}


	public int getReg() {
		return reg;
	}

	public void setReg(int reg) {
		this.reg = reg;
	}
	
	// Create easy calculator
	// Again, use float
	
	@Override
	public float billCalculation() {
		int totalBill = 0;
		return totalBill += (numberOfWheels*100);
	}
	

	

}
