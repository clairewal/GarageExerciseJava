package garagefurther;


public class Vehicle {
	
	// Give vehicle class variables which will be inherited by car, boat, plan :)
	
	public String cartype;
	public int numberOfWheels;
	
	public String operational;
	public int ID;
	
	// Generate getters and setters
	// Generate constructors
	
	public Vehicle(String cartype, int numberOfWheels, String operational, int ID) {
		super();
		this.cartype = cartype;
		this.numberOfWheels = numberOfWheels;
		this.operational = operational;
		this.ID = ID;
	}
	
	public Vehicle(String cartype, int numberOfWheels, String operational) {
		super();
		this.cartype = cartype;
		this.numberOfWheels = numberOfWheels;
		this.operational = operational;
		this.ID = 0;
	}

	public String getCartype() {
		return cartype;
	}

	public void setCartype(String cartype) {
		this.cartype = cartype;
	}

	public int getNumberOfWheels() {
		return numberOfWheels;
	}

	public void setNumberOfWheels(int numberOfWheels) {
		this.numberOfWheels = numberOfWheels;
	}

	public String getOperational() {
		return operational;
	}

	public void setOperational(String operational) {
		this.operational = operational;
	}

	public int getID() {
		return ID;
	}

	public void setID(int ID) {
		this.ID = ID;
	}
	
	// Create bill calculator method
	// Use float because bills can be .00
	
	public float billCalculation() {
					int totalBill = 0;
			return totalBill += (numberOfWheels*100);
	}
	
	
		


}
